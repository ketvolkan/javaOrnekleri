package classornek;
import java.time.LocalDate;

public class ogretmen 
{
	String Ad,Soyad,Memleket;
	Byte Yas;	
	public ogretmen(String ad,String soyad,String memleket,Byte yas)
	{
		Ad = ad;
		Soyad = soyad;
		Memleket = memleket;
		Yas = yas;
	}
	public static void katilma(ogrenci katilan)
	{
		LocalDate suan = LocalDate.now(); 
		System.out.println(katilan.Ad+" "+katilan.Soyad+"---"+suan);
	}
	public static void puanDegistir(ogrenci ogr,Byte ekleme)
	{
		ogr.puan = ogr.puan + ekleme;
	}
}
